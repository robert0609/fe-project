{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./test/unit"
    ],
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
